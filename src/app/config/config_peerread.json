{
    "dataset": {
        "name": "allenai/peer_read",
        "venues": ["acl_2017", "nips_2013-2017", "iclr_2017"],
        "splits": ["train", "dev", "test"],
        "cache_dir": "data/peerread",
        "streaming": false
    },
    "loading": {
        "batch_size": 100,
        "max_samples": 1000,
        "shuffle": true,
        "num_workers": 1,
        "prefetch_factor": 2
    },
    "evaluation": {
        "task_type": "peer_review_generation",
        "metrics": ["acceptance_accuracy", "aspect_score_correlation", "review_quality"],
        "benchmark_mode": "expert_comparison",
        "output_format": "structured"
    },
    "agent_prompts": {
        "review_task": "Provide a comprehensive peer review for this scientific paper. Include: 1) Summary of the paper's main contributions, 2) Strengths and weaknesses, 3) Detailed comments on originality, clarity, significance, and technical soundness, 4) Numerical scores (1-10) for each aspect, 5) Overall recommendation (accept/reject) with confidence score.",
        "acceptance_task": "Based on the paper abstract and metadata, predict whether this paper should be accepted or rejected. Provide reasoning for your decision and a confidence score.",
        "aspect_scoring_task": "Evaluate this paper on the following aspects and provide scores from 1-10: originality, clarity, significance, technical_soundness, experimental_validation, related_work_coverage."
    },
    "data_processing": {
        "paper_fields": ["paper_id", "title", "abstract", "authors", "venue", "year", "sections", "references"],
        "review_fields": ["paper_id", "reviewer_id", "recommendation", "comments", "scores", "confidence"],
        "required_fields": ["paper_id", "title", "abstract", "recommendation"],
        "optional_fields": ["sections", "references", "scores", "confidence"],
        "text_preprocessing": {
            "clean_text": true,
            "remove_latex": true,
            "normalize_whitespace": true,
            "max_length": 10000
        }
    },
    "venues_config": {
        "acl_2017": {
            "full_name": "Association for Computational Linguistics 2017",
            "domain": "Natural Language Processing",
            "paper_count": "approximately 4000",
            "review_format": "structured"
        },
        "nips_2013-2017": {
            "full_name": "Neural Information Processing Systems 2013-2017",
            "domain": "Machine Learning",
            "paper_count": "approximately 8000",
            "review_format": "structured"
        },
        "iclr_2017": {
            "full_name": "International Conference on Learning Representations 2017",
            "domain": "Deep Learning",
            "paper_count": "approximately 2700",
            "review_format": "structured"
        }
    }
}